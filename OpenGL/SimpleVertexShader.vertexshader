#version 330

in vec3 vertices;
in vec3 colors;
in vec2 texCoords;
in vec2 texTranslation;

uniform mat4 WVP;

out vec3 retColor;
out vec2 retTexCoord;
out vec2 retTexTranslation;

void main()
{
	gl_Position = WVP * vec4(vertices, 1.0);
	retColor = colors;
	retTexCoord = texCoords;
	retTexTranslation = texTranslation;
}